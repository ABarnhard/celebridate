extends ../shared/template
block content
  .row
    .col-xs-12
      .panel.panel-default
        .panel-body
        .row
          .col-xs-2
            a.thumbnail#profile(href='/profile/photos')
              img(src='#{userData.profilePhoto}')
          .col-xs-6
            a(href='/profile/about')
              h2=user.alias
            ul.list-inline
              li
                h5=user.age
              li
                h5=user.sex
              li
                h5=user.location
          .col-xs-2
  .row
    .col-xs-6
      .row
        .col-xs-12
          .panel.panel-info
            .panel-heading
              h3#contact.panel-title Contact Information
                include contact
            .panel-body
              ul.list-group
                li.list-group-item
                  | Alias:&nbsp
                  | #{userData.alias}
                li.list-group-item
                  | Name:&nbsp
                  | #{userData.name}
                li.list-group-item
                  | Email:&nbsp
                  a(href='mailto:#{userData.email}?Subject=Email%20from%20CelebriDate', target='_top')=userData.email
                li.list-group-item
                  | Phone:&nbsp
                  | #{userData.phone}
                li.list-group-item
                  | Address:&nbsp
                  | #{userData.address.street}, &nbsp; #{userData.address.city}, &nbsp; #{userData.address.state}&nbsp;&nbsp; #{userData.address.zip}
      .row
        .col-xs-12
          .panel.panel-info
            .panel-heading
                h3#about.panel-title About me
                  include about
              .panel-body
                dl
                  dt My self summary
                  //dd #{userData.about.aboutMe}
                  br
                  dt What I'm doing with my life...
                  //dd #{userData.about.life}
                  br
                  dt I'm really good at...
                  //dd #{userData.about.brag}
                  br
                  dt My interestes (favorite books, music, food, etc.)...
                  //dd #{userData.about.interests}
                  br
                  dt My favorite roll was...
                  //dd #{userData.about.roll}
                  br
                  dt On a typical Wednesday night I am...
                  //dd #{userData.about.nightLife}
                  br
    .col-xs-6
      .row
        .col-xs-12
          .panel.panel-info
            .panel-heading
                h3#details.panel-title Details
                  include details
              .panel-body
                dl.dl-horizontal
                  dt My self summary
                  dd #{userData.about.aboutMe}
                  br
block scripts
