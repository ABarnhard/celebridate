extends ../shared/template
block content
  .row
    .col-xs-12
      .panel.panel-default
        .panel-body
        .row
          .col-xs-2
            a.thumbnail#profile(href='/profile/photos')
              img(src='/img/node.png')
          .col-xs-6
            a(href='/profile/about')
              h2=user.alias
            ul.list-inline
              li
                h5=user.age
              li
                h5=user.sex
              li
                h5=user.location
          .col-xs-2

  .row
    .col-xs-6
      .row
        .col-xs-12
          .panel.panel-info
            .panel-heading
                h3#contact.panel-title Contact Information
                include contact
              .panel-body
                h6 NOTE: This is the contact information section of the profile page.
      .row
        .col-xs-12
          .panel.panel-info
            .panel-heading
                h3#about.panel-title About Me
                  include about
              .panel-body
                h6 NOTE: This is the about section of the profile page.
    .col-xs-6
      .row
        .col-xs-12
          .panel.panel-info
            .panel-heading
                h3#details.panel-title Details
                  include details
              .panel-body
                h6 NOTE: This is the details section of the profile page.





block scripts
