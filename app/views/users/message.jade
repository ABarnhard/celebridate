        .panel-body
          p= moment(msg.date).format('MM/DD/YYYY')
          h4= msg.message
    .col-xs-12
  .row
    .col-xs-4
      button.btn.btn-default.btn-(data-toggle='modal', data-target='#replyMessage') Reply
      include replymessage

